@model IEnumerable<string>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="dropdown form-inline mt-2 mt-md-0" style="background-color: white;">
                <button class="btn btn-outline-light btn-lg btn-block dropdown-toggle" type="button" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: white; color: black;">
                    Выберите жанр
                </button>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" style="background-color: white;">
                    @foreach (var link in Model)
                    {
                        <a class="dropdown-item" href="@Url.Action("List", "Book", new { genre = link, page = 1 })" style="color: black;">@link</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
